{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "no-unused-vars": "error",
        "no-empty": "error",
        "no-trailing-spaces": "error",
        "no-undef": "off",
        "@typescript-eslint/no-var-requires": "off"
    },
    "globals": {
        "expect": "readonly"
    }
}